<Window x:Name="MainWindow1" x:Class="ArduLED.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" 
        xmlns:local="clr-namespace:ArduLED"
        Title="ArduLED" Height="600" Width="820.5" Background="#FF2F3136" BorderThickness="0" LayoutUpdated="MainWindow1_LayoutUpdated" Icon="Resources/arduled_icon_v2.ico" AllowsTransparency="True" WindowStyle="None" ResizeMode="CanResizeWithGrip" Loaded="MainWindow1_Loaded" Closing="MainWindow1_Closing">

    <Window.Resources>
        
        <!--Standart Resouces-->

        <FontFamily x:Key="StandartFont">Lucida Console</FontFamily>
        <SolidColorBrush x:Key="ComboboxBackgroundColor" Color="#FF77787A" />
        <SolidColorBrush x:Key="ComboboxArrowBoxBackgroundColor" Color="#FF454A53"/>

        <!--Standart Styles-->

        <Style TargetType="Label" x:Key="StandartLabelStyle">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource StandartFont}"/>
        </Style>

        <Style TargetType="CheckBox" x:Key="StandartCheckboxStyle">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource StandartFont}"/>
        </Style>

        <Style x:Key = "StandartTopButtonStyle" TargetType = "Button">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="FontFamily" Value="{StaticResource StandartFont}"/>
            <Setter Property="Foreground" Value = "White" />
            <Setter Property="BorderThickness" Value = "0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Background">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property = "Foreground" Value = "#FF007AD9" />
                                <Setter Property = "Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key = "StandartSidebarButtonStyle" TargetType = "Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="FontFamily" Value="{StaticResource StandartFont}"/>
            <Setter Property = "Foreground" Value = "White" />
            <Setter Property="BorderThickness" Value = "0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Background" Background="#FF1B212E">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property = "Foreground" Value = "#FF007AD9" />
                                <Setter Property = "Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key = "StandartSidebarButtonStyleCenterText" TargetType = "Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="FontFamily" Value="{StaticResource StandartFont}"/>
            <Setter Property = "Foreground" Value = "White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="background" Background="#FF1B212E">
                            <ContentPresenter x:Name="ButtonContentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property = "Foreground" Value = "#FF007AD9" />
                                <Setter Property = "Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" Background="{StaticResource ComboboxArrowBoxBackgroundColor}" BorderThickness="0" />
                <Border Background="{StaticResource ComboboxBackgroundColor}"/>
                <Path x:Name="Arrow" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 5 9 L 10 0 Z" Fill="White"/>
            </Grid>
        </ControlTemplate>

        <Style x:Key = "StandartComboboxStyle" TargetType = "ComboBox">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="FontFamily" Value="{StaticResource StandartFont}"/>
            <Setter Property ="Foreground" Value = "White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}" Grid.Column="2" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press"/>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False" Margin="3,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left" Content="{TemplateBinding ComboBox.SelectionBoxItem}" ContentTemplate="{TemplateBinding ComboBox.SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="{StaticResource ComboboxBackgroundColor}" BorderThickness="1"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key = "StandartTextboxStyle" TargetType = "TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property = "Foreground" Value = "White" />
            <Setter Property = "Background" Value = "#FF77787A" />
            <Setter Property = "BorderThickness" Value = "0" />
        </Style>

        <Style x:Key = "StandartTextboxStyleCenterText" TargetType = "TextBox">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property = "Foreground" Value = "White" />
            <Setter Property = "Background" Value = "#FF77787A" />
            <Setter Property = "BorderThickness" Value = "0" />
        </Style>

    </Window.Resources>

    <Grid x:Name="MainGrid" MinWidth="810" MinHeight="455">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="TopBarDragGrid" Background="#FF202225" MouseDown="Grid_MouseDown" MouseMove="Window_MouseMove" MouseUp="Grid_MouseUp" Grid.ColumnSpan="4" MouseLeave="Grid_MouseLeave">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="175" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="45"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="LogoImage" Grid.Column="0" HorizontalAlignment="Center" Margin="0,2,2,2" VerticalAlignment="Top" Source="Resources/arduled_icon_v2.ico"/>
            <Label x:Name="TopLabel" Content="ArduLED 2.0" Grid.Column="1" FontSize="20" Style="{StaticResource StandartLabelStyle}"/>
            <Button x:Name="ExitButton" Content="X" Grid.Column="5" Width="35" Margin="5" FontSize="14" BorderThickness="0" Background="Red" Foreground="White" Click="ExitButton_Click"/>
            <Button x:Name="MaximizeButton" Content="☐" Grid.Column="4" Width="35" Margin="5" FontSize="14" BorderThickness="0" Background="#FF36393F" Foreground="White" Click="MaximizeButton_Click"/>
            <Button x:Name="MinimizeButton" Content="_" Grid.Column="3" Width="35" Margin="5" FontSize="14" BorderThickness="0" Background="#FF36393F" Foreground="White" Click="MinimizeButton_Click"/>
        </Grid>

        <Rectangle Grid.Column="0" Grid.Row="1" Fill="#FF202225" Grid.RowSpan="2"/>

        <Grid Grid.Column="1" Grid.Row="1" Background="#FF2F3136" Grid.ColumnSpan="3" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ModesButton" Content="Modes" Grid.Column="0" Margin="10" FontSize="14" Style="{DynamicResource StandartTopButtonStyle}" Click="ModesButton_Click"/>
            <Button x:Name="SettingsButton" Content="Settings" Grid.Column="1" Margin="10" FontSize="14" Style="{DynamicResource StandartTopButtonStyle}" Click="SettingsButton_Click"/>
            <Button x:Name="SetupButton" Content="Setup" Grid.Column="2" Margin="10" FontSize="14" Style="{DynamicResource StandartTopButtonStyle}" Click="SetupButton_Click"/>
            <Button x:Name="HelpButton" Content="Help" Grid.Column="3" Margin="10" FontSize="14" Style="{DynamicResource StandartTopButtonStyle}" Click="HelpButton_Click"/>
        </Grid>

        <Grid x:Name="ModesSideBar" Grid.Column="1" Grid.Row="2" Background="#FF2F3136">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="ModesDeviceSelectionCombobox" Grid.Row="0" Grid.ColumnSpan="3" Margin="3" FontSize="12" SelectedIndex="0" Style="{DynamicResource StandartComboboxStyle}" SelectionChanged="ModesDeviceSelectionCombobox_SelectionChanged" DropDownOpened="ModeDeviceSelectionCombobox_DropDownOpened"/>
            <Button x:Name="ModesFadeingButton" Grid.Row="1" Grid.ColumnSpan="3" Content="Fadeing" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="ModesFadeingButton_Click"/>
            <Button x:Name="ModesVisualizerButton" Grid.Row="2" Grid.ColumnSpan="3" Content="Visualizer" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="ModesVisualizerButton_Click" />
            <Button x:Name="ModesAmbilightButton" Grid.Row="3" Grid.ColumnSpan="3" Content="Ambilight" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="ModesAmbilightButton_Click" />
            <Button x:Name="ModesIndividualColorsButton" Grid.Row="4" Grid.ColumnSpan="3" Content="Individual Colors" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="ModesIndividualColorsButton_Click"/>
            <Button x:Name="ModesInstructionsButton" Grid.Row="5" Grid.ColumnSpan="3" Content="Instructions" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="ModesInstructionsButton_Click"/>
            <Button x:Name="ModesServerButton" Grid.Row="6" Grid.ColumnSpan="3" Content="Server" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="ModesServerButton_Click"/>
            <Button x:Name="ModesAnimationButton" Grid.Row="7" Grid.ColumnSpan="3" Content="Animation" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="ModesAnimationButton_Click"/>

            <Label x:Name="FromToIDLabel" Grid.Column="1" Grid.Row="8" Content="From To ID" Style="{StaticResource StandartLabelStyle}"/>
            <Label x:Name="FromToIDSliderToValue" Grid.Row="9" Grid.Column="2" Content="1" FontSize="8" VerticalAlignment="Bottom" Style="{StaticResource StandartLabelStyle}"/>
            <Label x:Name="FromToIDSliderFromValue" Grid.Row="9" Grid.Column="0" Content="0" FontSize="8" VerticalAlignment="Top" Style="{StaticResource StandartLabelStyle}"/>
            <Slider x:Name="FromToIDSliderFrom" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Minimum="0" Maximum="1" SmallChange="1" TickFrequency="1" TickPlacement="BottomRight" Value="0" LargeChange="5" Uid="Setting" PreviewMouseUp="FromToIDSliderFrom_MouseUp" ValueChanged="FromToIDSliderFrom_ValueChanged"/>
            <Slider x:Name="FromToIDSliderTo" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Minimum="0" Maximum="1" SmallChange="1" TickFrequency="1" TickPlacement="TopLeft" Value="1" LargeChange="5" Uid="Setting" PreviewMouseUp="FromToIDSliderFrom_MouseUp" ValueChanged="FromToIDSliderTo_ValueChanged"/>

        </Grid>

        <Grid x:Name="SettingsSideBar" Grid.Column="1" Grid.Row="2" Background="#FF2F3136" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="SettingsSideBarConnectionButton" Grid.Row="0" Content="Connection" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="SettingsSideBarConnectionButton_Click" />
            <Button x:Name="SettingsSideBarStartupButton" Grid.Row="1" Content="Startup" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="SettingsSideBarStartupButton_Click"/>
            <Button x:Name="SettingsSideBarOtherButton" Grid.Row="2" Content="Other" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="SettingsSideBarOtherButton_Click"/>
        </Grid>

        <Grid x:Name="SetupSideBar" Grid.Column="1" Grid.Row="2" Background="#FF2F3136" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="DeviceSelectionCombobox" Grid.Row="0" FontSize="12" SelectedIndex="0" Style="{DynamicResource StandartComboboxStyle}" SelectionChanged="DeviceSelectionCombobox_SelectionChanged" DropDownOpened="DeviceSelectionCombobox_DropDownOpened"/>
            <Button x:Name="SetupSideBarAddStripButton" Grid.Row="1" Content="Add Strip" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="SetupSideBarAddStripButton_Click"/>
            <Button x:Name="SetupSideBarSaveButton" Grid.Row="2" Content="Save Setup" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="SetupSideBarSaveButton_Click"/>
            <Button x:Name="SetupSideBarLoadButton" Grid.Row="3"  Content="Load a Setup" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="SetupSideBarLoadButton_Click"/>
            <Button x:Name="SetupSideBarSendButton" Grid.Row="4" Content="Send Setup to device" Margin="0,2,10,2" FontSize="10" Style="{DynamicResource StandartSidebarButtonStyle}" Click="SetupSideBarSendButton_Click"/>
            <ProgressBar x:Name="SetupSideBarTransferSetupProgressBar" Grid.Row="5" Margin="0,5,10,5"/>
        </Grid>

        <Grid x:Name="HelpSideBar" Grid.Column="1" Grid.Row="2" Background="#FF2F3136" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="HelpSideBarWikiButton" Grid.Row="0" Content="ArduLED Wiki" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="HelpSideBarWikiButton_Click"/>
            <Button x:Name="HelpSideBarForumButton" Grid.Row="1" Content="Forum" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="HelpSideBarForumButton_Click"/>
            <Button x:Name="HelpSideBarContactButton" Grid.Row="2" Content="Contact" Margin="0,2,10,2" FontSize="12" Style="{DynamicResource StandartSidebarButtonStyle}" Click="HelpSideBarContactButton_Click"/>
        </Grid>

        <Grid x:Name="WelcomeGrid" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Background="#FF36393F">
            <Label x:Name="WelcomeLabel" Content="Welcome to ArduLED!" FontSize="48" Style="{StaticResource StandartLabelStyle}"/>
        </Grid>

        <Grid x:Name="SetupGrid" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Background="#FF36393F" d:IsHidden="True">
            <Grid x:Name="InnerSetupPanel" Background="LightGray" Grid.Column="0" Grid.Row="0" Margin="10,10,10,10" MouseUp="SetupGrid_MouseUp" MouseMove="SetupGrid_MouseMove"/>
        </Grid>

        <Grid x:Name="FadingGrid" Grid.Column="2" Grid.Row="2" Background="#FF36393F" Grid.ColumnSpan="2" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="220"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Rectangle x:Name="FadingColorRectangle" Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Fill="White"/>
            <Image x:Name="FadingGridColorWheelImage" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,10,10" Width="200" Height="200" Source="Resources/color_wheel.png" MouseDown="FadingGridColorWheelPointer_MouseDown" MouseMove="FadingGridColorWheelPointer_MouseMove" MouseUp="FadingGridColorWheelPointer_MouseUp"/>
            <Ellipse x:Name="FadingGridColorWheelPointer" Grid.ColumnSpan="3" Width="5" Height="5" StrokeThickness="1" Stroke="Black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="107.5,107.5,0,0" MouseDown="FadingGridColorWheelPointer_MouseDown" MouseMove="FadingGridColorWheelPointer_MouseMove" MouseUp="FadingGridColorWheelPointer_MouseUp"/>
            <Label x:Name="FadingRGBColorCodeLabel" Grid.Row="1" Grid.ColumnSpan="3" Content="RGB Color: 255, 255, 255" FontSize="8" Style="{StaticResource StandartLabelStyle}"/>

            <Label x:Name="FadingGammaCorrectionLabel" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Content="Gamma Correction" Style="{StaticResource StandartLabelStyle}" Uid="VisualAdvancedSetting"/>
            <Label x:Name="FadingGammaCorrectionSliderValueLabel" Grid.Row="3" Grid.Column="2" Content="1" FontSize="8" Style="{StaticResource StandartLabelStyle}" Uid="VisualAdvancedSetting"/>
            <Slider x:Name="FadingGammaCorrectionSlider" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Minimum="0.01" Maximum="3" SmallChange="0.05" TickFrequency="0.1" TickPlacement="BottomRight" Value="1" LargeChange="0.5" Uid="AdvancedSetting" ValueChanged="FadingGammaCorrectionSlider_ValueChanged"/>

            <Label x:Name="FadingGammaSpeedSettingsLabel" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="3" Content="Speed Settings" Uid="VisualAdvancedSetting" Style="{StaticResource StandartLabelStyle}"/>

            <Label x:Name="FadingFadeSpeedLabel" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="3" Content="Fade Speed" Uid="VisualAdvancedSetting" Style="{StaticResource StandartLabelStyle}"/>
            <Label x:Name="FadingFadeSpeedSliderValueLabel" Grid.Row="3" Grid.Column="4" Content="10" FontSize="8" Uid="VisualAdvancedSetting" Style="{StaticResource StandartLabelStyle}"/>
            <Slider x:Name="FadingFadeSpeedSlider" Grid.Row="3" Grid.Column="3" Minimum="1" Maximum="150" SmallChange="1" TickFrequency="5" TickPlacement="BottomRight" Value="10" LargeChange="10" Uid="AdvancedSetting" ValueChanged="FadingFadeSpeedSlider_ValueChanged"/>

            <Label x:Name="FadeingFadeFactorLabel" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Content="Fade Factor" Uid="VisualAdvancedSetting" Style="{StaticResource StandartLabelStyle}"/>
            <Label x:Name="FadeingFadeFactorSliderValueLabel" Grid.Row="5" Grid.Column="4" Content="0.1" FontSize="8" Uid="VisualAdvancedSetting" Style="{StaticResource StandartLabelStyle}"/>
            <Slider x:Name="FadeingFadeFactorSlider" Grid.Row="5" Grid.Column="3" Minimum="0.01" Maximum="1" SmallChange="0.05" TickFrequency="0.1" TickPlacement="BottomRight" Value="0.1" LargeChange="0.25" Uid="AdvancedSetting" ValueChanged="FadeingFadeFactorSlider_ValueChanged"/>
        </Grid>

        <Grid x:Name="VisualizerGrid" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Background="#FF36393F" d:IsHidden="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="250"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="235"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="VisualizerSelectDeviceLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Content="Select Audio Device" FontSize="12" Style="{StaticResource StandartLabelStyle}"/>
            <ComboBox x:Name="VisualizerSelectDeviceCombobox" Grid.Row="1" Grid.ColumnSpan="4" Margin="3" FontSize="12" SelectedIndex="0" Uid="Setting" Style="{DynamicResource StandartComboboxStyle}"/>

            <Label x:Name="VisualizerSelectVisualizationTypeLabel" Grid.Row="2" Grid.Column="0" Content="Visualization Type" FontSize="12" Style="{StaticResource StandartLabelStyle}"/>
            <ComboBox x:Name="VisualizerSelectVisualizationTypeCombobox" Grid.Row="3" Margin="3,3,3,3" FontSize="12" SelectedIndex="0" Uid="Setting" Style="{DynamicResource StandartComboboxStyle}" SelectionChanged="VisualizerSelectVisualizationTypeCombobox_SelectionChanged"/>

            <Label x:Name="VisualizerVisualSamplesLabel" Grid.Row="4" Grid.Column="2" Content="Audio Samples" Uid="VisualAdvancedSetting" Style="{StaticResource StandartLabelStyle}"/>
            <Label x:Name="VisualizerVisualSamplesValueLabel" Grid.Row="5" Grid.Column="3" Content="128" FontSize="8" Uid="VisualAdvancedSetting" Style="{StaticResource StandartLabelStyle}"/>
            <Slider x:Name="VisualizerVisualSamplesSlider" Grid.Row="5" Grid.Column="2" Minimum="1" SmallChange="1" TickPlacement="BottomRight" Value="128" LargeChange="5" Maximum="255" TickFrequency="5" Uid="AdvancedSetting" ValueChanged="VisualizerVisualSamplesSlider_ValueChanged"/>

            <Label x:Name="VisualizerSensitivityLabel" Grid.Row="4" Grid.Column="0" Content="Sensitivity" Uid="VisualAdvancedSetting" Style="{StaticResource StandartLabelStyle}"/>
            <Label x:Name="VisualizerSensitivityValueLabel" Grid.Row="5" Grid.Column="1" Content="3" FontSize="8" Uid="VisualAdvancedSetting" Style="{StaticResource StandartLabelStyle}"/>
